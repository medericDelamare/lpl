{% extends 'base.html.twig' %}

{% block title %}Traiteur Les Ptits Loups et leur buffet froid{% endblock %}
{% block description %}Le traiteur Les Ptits Loups situé à côté de Pont-audemer dans l'Eure vous propose un buffet froid à partir de 17 euros.{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/slick.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('css/slick-theme.css') }}"/>
{% endblock %}

{% block body %}
    <div class="jumbotron-parallax parallax-buffet-froid" data-paroller-factor="0.5" data-paroller-factor-xs="0.2"></div>
    <section class="container title-container">
        <div class="title-page">
            <h2> Buffet froid </h2>
        </div>
    </section>
    <div></div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="{{ asset('images/buffet-froid/slide3.jpg') }}" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{ asset('images/buffet-froid/slide6.jpg') }}" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{ asset('images/buffet-froid/slide7.jpg') }}" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

        </div>
        <br>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <p class="border border-perso-color text-center">
                    Livraison gratuite à partir de 30 personnes <br>
                    50€ d'accompte à la reservation
                </p>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-5 offset-md-1 text-center">
                <h1 class="text-center">Menu Buffet froid - 17€</h1>
                <br>

                <h2>Crudités</h2>
                <p>( Salade de riz, Piémontaise, Paysanne, Carotte, Salade de choux )</p>

                <h2>Charcuterie</h2>
                <p>( Jambon sec, Andouille, Salami, Mortadelle, Rosette, Saucisson )</p>

                <h2>Viandes</h2>
                <p>( Rôti de boeuf, Gigot d'agneau, poulet, Rôti de porc )</p>

                <h2>Salades</h2>
                <p>( Salades verte de saison et son assaisonnement )</p>

                <h2>Fromages</h2>
                <p>( Camembert, Pont-l'Evêque, Saint paulin, Chèvre, Bresse bleu )</p>

                <h2>Pain</h2>
                <p>( Campagne ou Baguettes )</p>

                <h2>Divers</h2>
                <p>( Cornichon, Moutarde, Mayonnaise )</p>
            </div>
            <div class="col-md-5 text-center">
                <h1 class="text-center">Suppléments</h1>
                <br>
                <h2>Petit four chaud</h2>
                <p>( 0,50€ pièce )</p>

                <h2>Petit four froid</h2>
                <p>( 0,60€ pièce )</p>

                <h2>Grand pain surprise</h2>
                <p>( 25€ pour environ 64 toats  )</p>

                <h2>Marquise de Saumon</h2>
                <p>( 2,80€ par personne )</p>

                <h2>Saumon frais</h2>
                <p>( 40€ pièce pour environ 2 à 3 kilos )</p>

                <h2>Saumon farcie</h2>
                <p>( 45€ pièce pour environ 2 à 3 kilos )</p>

                <h2>Terrine de poisson</h2>
                <p>( 25€ pièce )</p>

                <h2>Terrine de pâté</h2>
                <p>( 20€ pièce )</p>

                <h2>Jambon à l'os</h2>
                <p>( 100€ pièce )</p>
            </div>
        </div>
    </div>
{% endblock%}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('vendor/slick/slick.js') }}"></script>

    <script type="text/javascript">
        $('.slider-for').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            arrows: false,
            fade: true,
            asNavFor: '.slider-nav',
            autoplay: true
        });
        $('.slider-nav').slick({
            slidesToShow: 3,
            slidesToScroll: 1,
            asNavFor: '.slider-for',
            dots: false,
            centerMode: true,
            focusOnSelect: true

        });
    </script>

    <script src="{{ asset('js/jquery.paroller.min.js') }}"></script>
    <script>
        $('.jumbotron-parallax').paroller();

    </script>

    <script>$('.jumbotron').carousel()</script>
{% endblock %}