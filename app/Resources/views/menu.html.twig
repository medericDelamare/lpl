{% extends 'base.html.twig' %}

{% block body %}
    <div class="parallax"></div>
    <div class="container-full">
        <h1 class="text-center">Cartes et menus</h1>
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Cartes</h2>
                {% for categorie in categories %}
                <div class="m-categorie">
                    <div class="m-title-categorie">
                        <h3 class="text-center">{{ categorie.nom }}</h3>
                    </div>
                    {% for plat in categorie.plats %}
                    <div class="m-plat-info">
                        <div class="m-titre-plat">
                            <span class="m-nom-plat m-photo-active">{{ plat.nom }}</span>
                        </div>
                        <span class="m-separateur"></span>
                        <div class="m-prix">
                            <div class="m-quantite">
                                <span>{{ plat.prix }}€</span>
                            </div>
                        </div>
                    </div>
                    <p class="m-description-plat">{{ plat.description }}</p>
                    {% endfor %}
                </div>
                {% endfor %}
                <h2 class="text-center">Carte des vins</h2>
                {% for typeVin in typesVins %}
                    <div class="m-categorie">
                        <div class="m-title-categorie">
                            <h3 class="text-center">{{ typeVin.nom }}</h3>
                        </div>
                        {% for vin in typeVin.vins %}
                            <div class="m-plat-info">
                                <div class="m-titre-plat">
                                    <span class="m-nom-plat m-photo-active">{{ vin.nom }}</span>
                                </div>
                                <span class="m-separateur"></span>
                                <div class="m-prix">
                                    <div class="m-quantite">
                                        {% if typeVin.code != 'pichet' %}
                                        <span>75cl</span>
                                        {% endif %}
                                        <span>{{ vin.prix1 }}€</span>
                                    </div>
                                    {% if typeVin.code != 'pichet' %}
                                    <div class="m-quantite">
                                        {% if typeVin.code != 'pichet' %}
                                            <span>37,5cl</span>
                                        {% endif %}
                                        {% if vin.prix2 %}<span>{{ vin.prix2 }}€</span>{% else %}<span>-</span>{% endif %}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
            <div class="col-md-6">
                <h2 class="text-center">Menus</h2>
                {% for menu in menus %}
                    <div class="m-categorie">
                        <div class="m-title-categorie">
                            <h3 class="text-center">{{ menu.nom }} - <small class="prix-menu">{{ menu.prix }}€</small></h3>
                        </div>
                        {% for choix in menu.choix %}
                            {% set i = 1 %}
                            <div class="choix-menu">
                                {% for plat in choix.plats %}
                                    <div class="plat-menu">
                                        {{ plat.nom }}
                                        {% if i < choix.plats|length %}
                                            </br><span>OU</span>
                                        {% endif %}
                                    </div>
                                    {% set i = i+1 %}
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <a href="#" class="btt"><i class="fa fa-chevron-up"></i></a>




{% endblock %}

{% block javascripts %}
    <script>
        var scrolled = 400;
        $(window).scroll(function () {
            if ($(window).scrollTop() > scrolled) {
                $('a.btt').fadeIn('slow');
            } else {
                $('a.btt').fadeOut('slow');
            }
        });
    </script>

    <script>
        $('a.btt').click(function () {
            $('html, body').animate({scrollTop: 0}, 700);
            return false;
        });
    </script>
{% endblock %}