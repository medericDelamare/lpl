{% extends 'base.html.twig' %}

{% block body %}
    <div class="parallax-menu"></div>
    <section class="container title-container">
        <div class="title-page">
            <h2> Carte &amp; Menus </h2>
        </div>
    </section>

    <div class="text-center"><a id="btn-carte">Cartes</a> - <a id="btn-menu">Menus</a></div>

    <div id="carte">
        <div class="container-full">
            <div class="row">
                <div class="col-md-10 offset-1">
                    <h2 class="text-center m-menu">Cartes</h2>
                    <h3 class="text-center">Carte des vins</h3>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    {% for key,typeVin in typesVins %}
                        {% if(key%2 == 0) %}
                            <div class="m-categorie">
                                <div class="m-title-categorie">
                                    <h4 class="text-center couleur-principale">{{ typeVin.nom }}</h4>
                                </div>
                                {% for vin in typeVin.vins %}
                                    <div class="m-plat-info">
                                        <div class="m-titre-plat">
                                            <span class="m-nom-plat m-photo-active">{{ vin.nom }}</span>
                                        </div>
                                        <span class="m-separateur"></span>
                                        <div class="m-prix">
                                            <div class="m-quantite">
                                                {% if typeVin.code != 'pichet' %}
                                                    <span>75cl</span>
                                                {% endif %}
                                                <span>{{ vin.prix1 }}€</span>
                                            </div>
                                            {% if typeVin.code != 'pichet' %}
                                                <div class="m-quantite">
                                                    {% if typeVin.code != 'pichet' %}
                                                        <span>37,5cl</span>
                                                    {% endif %}
                                                    {% if vin.prix2 %}<span>{{ vin.prix2 }}€</span>{% else %}<span>-</span>{% endif %}
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="col-md-6">
                    {% for key,typeVin in typesVins %}
                        {% if(key%2 != 0) %}
                            <div class="m-categorie">
                                <div class="m-title-categorie">
                                    <h4 class="text-center couleur-principale">{{ typeVin.nom }}</h4>
                                </div>
                                {% for vin in typeVin.vins %}
                                    <div class="m-plat-info">
                                        <div class="m-titre-plat">
                                            <span class="m-nom-plat m-photo-active">{{ vin.nom }}</span>
                                        </div>
                                        <span class="m-separateur"></span>
                                        <div class="m-prix">
                                            <div class="m-quantite">
                                                {% if typeVin.code != 'pichet' %}
                                                    <span>75cl</span>
                                                {% endif %}
                                                <span>{{ vin.prix1 }}€</span>
                                            </div>
                                            {% if typeVin.code != 'pichet' %}
                                                <div class="m-quantite">
                                                    {% if typeVin.code != 'pichet' %}
                                                        <span>37,5cl</span>
                                                    {% endif %}
                                                    {% if vin.prix2 %}<span>{{ vin.prix2 }}€</span>{% else %}<span>-</span>{% endif %}
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div id="menu">
        <div class="container-full">
            <div class="row">
                <div class="col-md-10 offset-1">
                    <h2 class="text-center m-menu">Menus</h2>
                </div>
            </div>
        </div>
        {% for categorie in categories %}
            <div class="container">

                <h3 class="text-center">{{ categorie.nom }}</h3>
                <div class="row">
                    <div class="col-md-6">
                        {% for key,menu in categorie.menus %}
                            {% if(key%2 == 0) %}
                                <div class="m-categorie">
                                    <div class="m-title-categorie">
                                        <h4 class="text-center">{{ menu.nom }} - <small class="prix-menu">{{ menu.prix }}€</small></h4>
                                    </div>
                                    {% for choix in menu.choix %}
                                        {% set i = 1 %}
                                        <div class="choix-menu">
                                            <div class="plat-menu">
                                                {% for plat in choix.plats %}
                                                    {{ plat.nom }}
                                                    {% if i < choix.plats|length %}
                                                        <span>/</span>
                                                    {% endif %}
                                                    {% set i = i+1 %}
                                                {% endfor %}
                                            </div>

                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="col-md-6">
                        {% for key,menu in categorie.menus %}
                            {% if(key%2 != 0) %}
                                <div class="m-categorie">
                                    <div class="m-title-categorie">
                                        <h4 class="text-center">{{ menu.nom }} - <small class="prix-menu">{{ menu.prix }}€</small></h4>
                                    </div>
                                    {% for choix in menu.choix %}
                                        {% set i = 1 %}
                                        <div class="choix-menu">
                                            <div class="plat-menu">
                                                {% for plat in choix.plats %}
                                                    {{ plat.nom }}
                                                    {% if i < choix.plats|length %}
                                                        <span>/</span>
                                                    {% endif %}
                                                    {% set i = i+1 %}
                                                {% endfor %}
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>



    <a href="#" class="btt"><i class="fa fa-chevron-up"></i></a>




{% endblock %}

{% block javascripts %}
    <script>
        var scrolled = 400;
        $(window).scroll(function () {
            if ($(window).scrollTop() > scrolled) {
                $('a.btt').fadeIn('slow');
            } else {
                $('a.btt').fadeOut('slow');
            }
        });
    </script>

    <script>
        $('a.btt').click(function () {
            $('html, body').animate({scrollTop: 0}, 700);
            return false;
        });
    </script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
        $( document ).ready(function() {
            $( "#menu" ).hide( );
            $( "#carte" ).show( );
            $( "#btn-carte").addClass('menu-selectionne');
        });


        $( "#btn-menu" ).on( "click", function() {
            $( "#menu" ).show( );
            $( "#carte" ).hide( );
            $( "#btn-menu").addClass('menu-selectionne');
            $( "#btn-carte").removeClass('menu-selectionne');
        });
        $( "#btn-carte" ).on( "click", function() {
            $( "#menu" ).hide( );
            $( "#carte" ).show( );
            $( "#btn-carte").addClass('menu-selectionne');
            $( "#btn-menu").removeClass('menu-selectionne');
        });
    </script>


{% endblock %}