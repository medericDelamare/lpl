                                <div class="choix-menu">
                                    {% for plat in choix.plats %}
                                        <div class="plat-menu">
                                            {{ plat.nom }}
                                            {% if i < choix.plats|length %}
                                                </br><span>OU</span>
                                            {% endif %}
                                        </div>
                                        {% set i = i+1 %}
                                    {% endfor %}
                                </div>
                            {% endfor %}
                        </div>
                    {% endfor %}
                    {% endfor %}
                </div>#}
    <a href="#" class="btt"><i class="fa fa-chevron-up"></i></a>




{% endblock %}

{% block javascripts %}
    <script>
        var scrolled = 400;
        $(window).scroll(function () {
            if ($(window).scrollTop() > scrolled) {
                $('a.btt').fadeIn('slow');
            } else {
                $('a.btt').fadeOut('slow');
            }
        });
    </script>

    <script>
        $('a.btt').click(function () {
            $('html, body').animate({scrollTop: 0}, 700);
            return false;
        });
    </script>
{% endblock %}