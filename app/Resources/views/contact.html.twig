{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Oswald:700|Patua+One|Roboto+Condensed:700" rel="stylesheet">
{% endblock %}

{% block body %}
    <section id="contact" class="content-section text-center">
        <div class="contact-section">
            <div class="container">
                <h2>Contactez-nous</h2>
                <p>N'hésitez pas à nous contacter en envoyant directement un mail via le formulaire ou en visitant nos sites sociaux comme Facebook.</p>
                <div class="row">
                    <div class="col-md-12">
                        {{ form_start(form) }}
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="exampleInputName2">Nom</label>
                                {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.name) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail2">Email</label>
                                {{ form_widget(form.email, { 'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="form-group">
                                <label for="subject">Sujet</label>
                                {{ form_widget(form.subject, { 'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.subject) }}
                            </div>
                            <div class="form-group ">
                                <label for="exampleInputText">Votre Message</label>
                                {{ form_widget(form.message, { 'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.message) }}
                            </div>

                            {# Render CSRF token etc .#}
                            <div style="display:none">
                                {{ form_rest(form) }}
                            </div>

                            <input type="submit" value="Envoyer" class="btn btn-default">

                        </form>
                        {{ form_end(form) }}

                        <hr>

                        <div class="onl_login">
                            <h3>Nos reseaux sociaux</h3>
                            <div class="row onl_row-sm-offset-3 onl_socialButtons">
                                <div class="col-xs-2 col-sm-2">
                                    <a href="https://www.facebook.com/Les-Ptits-Loups-853215901409148/" target="_blank" class="btn btn-lg btn-block onl_btn-facebook" data-toggle="tooltip" data-placement="top" title="Facebook">
                                        <i class="fa fa-facebook fa-2x"></i>
                                        <span class="hidden-xs"></span>
                                    </a>
                                </div>
                                <div class="col-xs-2 col-sm-2">
                                    <a href="#" class="btn btn-lg btn-block onl_btn-twitter" data-toggle="tooltip" data-placement="top" title="Twitter">
                                        <i class="fa fa-twitter fa-2x"></i>
                                        <span class="hidden-xs"></span>
                                    </a>
                                </div>
                                <div class="col-xs-2 col-sm-2">
                                    <a href="#" class="btn btn-lg btn-block onl_btn-google-plus" data-toggle="tooltip" data-placement="top" title="Google Plus">
                                        <i class="fa fa-google-plus fa-2x"></i>
                                        <span class="hidden-xs"></span>
                                    </a>
                                </div>
                            </div><br>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock%}