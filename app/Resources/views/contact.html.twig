{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Contact</h1>
        <div class="row contact-size">
            <i class="fa fa-location-arrow text-center col-md-12" aria-hidden="true"></i><br>
            <div class="text-center col-md-12">
                2 Charrière de l'Église <br>
                27500 Toutainville
            </div>
        </div>
        <div class="row contact-size">
            <i class="fa fa-phone col-md-12 text-center" aria-hidden="true"></i><br>
            <div class="text-center col-md-12">
                <a href="tel:0232420957">02 32 42 09 57</a>
            </div>
        </div>
        <div class="row contact-size">
            <i class="fa fa-envelope col-md-12 text-center" aria-hidden="true"></i><br>
            <div class="col-md-12 text-center">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="exampleInputName2">Nom</label>
                        <input type="text" class="form-control" id="exampleInputName2" placeholder="Jane Doe">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail2">Email</label>
                        <input type="email" class="form-control" id="exampleInputEmail2" placeholder="jane.doe@example.com">
                    </div>
                    <div class="form-group ">
                        <label for="exampleInputText">Votre Message</label>
                        <textarea  class="form-control" placeholder="Description"></textarea>
                    </div>
                    <button type="submit" class="btn btn-default">Envoyer</button>
                </form>

                <hr>
                <h3>Suivez-nous</h3>
                <div class="row text-center">
                    <div class="col-md-12">
                        <a href="https://www.facebook.com/Les-Ptits-Loups-853215901409148/" target="_blank" class="btn btn-primary"><i class="fa fa-facebook"> <span class="network-name">Facebook</span></i></a>
